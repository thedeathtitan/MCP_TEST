# ==============================================
# Local Development Environment Variables Template
# ==============================================
# Copy this file to .env.local and customize values
# DO NOT commit .env.local to version control

# ==============================================
# Application Settings
# ==============================================
NODE_ENV=development
PORT=3000

# ==============================================
# Database Configuration (Local PostgreSQL)
# ==============================================
POSTGRES_HOST=db
POSTGRES_PORT=5432
POSTGRES_DB=mcp_diagnostics
POSTGRES_USER=mcp_user
POSTGRES_PASSWORD=dev_password_123

# Connection string format for applications
DATABASE_URL=postgresql://mcp_user:dev_password_123@db:5432/mcp_diagnostics

# ==============================================
# Google Cloud Configuration (for local testing)
# ==============================================
# Uncomment and set these when testing Cloud SQL Auth Proxy
# GOOGLE_APPLICATION_CREDENTIALS=/path/to/service-account-key.json
# CLOUD_SQL_CONNECTION_NAME=your-project:region:instance-name
# GCP_PROJECT_ID=your-project-id

# ==============================================
# API Keys & External Services
# ==============================================
# Copy from GEMINI_API_KEY.env or set your own
GEMINI_API_KEY=your_gemini_api_key_here

# ==============================================
# Development Tools
# ==============================================
PGADMIN_PASSWORD=admin123

# ==============================================
# Feature Flags & Debug
# ==============================================
DEBUG=true
ENABLE_CORS=true
LOG_LEVEL=debug

# Force HTTP mode for MCP (useful for local testing)
MCP_HTTP_MODE=true

# ==============================================
# Frontend Configuration
# ==============================================
VITE_MCP_API_URL=http://localhost:3000
VITE_APP_TITLE=Medical Diagnostic Space - Local Dev 